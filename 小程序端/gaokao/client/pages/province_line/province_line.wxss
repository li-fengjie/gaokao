/* pages/province_line/province_line.wxss */

#container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 750rpx;
  margin-bottom: 300rpx;
}

.province_line {
  width: 650rpx;
  margin-top: 50rpx;
}

.admissionsline_option {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  color: #55c4b8;
}

.admissionsline_option view,.admissionsline_option picker {
  display: inline-block;
  border-top: 1px solid #55c4b8;
  border-bottom: 1px solid #55c4b8;
  width: 150rpx;
  text-align: center;
  padding: 15rpx 0;
}

.admissionsline_option i {
  display: inline-block;
}

.college_grade {
  width: 750rpx;
  margin-top: 30rpx;
}

.row, .grade_row {
  display: flex;
  width: 750rpx;
}

.row view {
  background-color: #4acdd6;
  width: 375rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 0;
}

.grade_year, .grade_line {
  background-color: #fff;
  width: 375rpx;
  text-align: center;
  color: #6b6a6a;
  font-size: 30rpx;
  padding: 15rpx 0;
}

.form {
  width: 650rpx;
  margin-top: 50rpx;
}

.form_title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #f8d17e;
}

.form_title i {
  margin-right: 20rpx;
  font-size: 60rpx;
}

.title_name {
  font-size: 35rpx;
  font-weight: 800;
}

.form_line {
  width: 660rpx;
  margin-top: 50px;
  border-bottom: 1px solid #55c4b8;
  position: relative
}

.form_form{
  position: relative
}

.form_san {
  width: 0;
  height: 0;
  border:solid ;
  border-width: 5px 10px;
  border-left-color: #55c4b8;
  border-right: none;
  border-top-color: transparent;
  border-bottom-color: transparent;
  position: absolute;
  right: 0px;
  bottom: -5px;
}

#myCanvas{
  position: absolute;
  height: 154px;
  width:  660rpx;
}

.form_year{
  width: 660rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.form_year view{
  width: 220rpx;
  color: #6B6A6A;
  font-size: 30rpx;
  text-align: center;
}

.fa-thumb-tack{
  display: block;
  position: absolute;
  color: #55c4b8;
  font-size: 20px;
  margin-left: -3px;
  transform: rotate(10deg)
}

.form_grade{
  position: absolute;
  font-size: 25rpx;
  color: #6B6A6A;
}

.col_line{
  position: absolute;
  border-right: 2px dashed #f8d17e;
}